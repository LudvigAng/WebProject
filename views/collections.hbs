    {{#if notLoggedIn}}
        <ul>
            <li>You must be logged in to create a collection</li>
        </ul>
    {{/if}}

    <a href="/collections/create"><button type="button" class="btn btn-dark">Create new collection</button></a>
    
    <div class="row mb-4 border topMargin20 padding20">

    {{#if collections.length}}
        {{#each collections}}
            <div class="col-lg-3" id="centerTextContainerSmallMargin">
                <svg class="bd-placeholder-img rounded-circle" width="100" height="100" focusable="false" role="img"><rect width="100%" height="100%" fill="{{{color}}}"></rect></svg>
                <h2>{{name}}</h2>
                <p class="h4">{{noOfReviews}} reviews</p>
                <p><a class="btn btn-secondary" href="/collections/{{collectionid}}" role="button">Visit collection</a></p>
            </div>            
        {{/each}}
    {{else}}
        <ul>
            <li>No collections have been created yet</li>
        </ul>
    {{/if}}
    </div>