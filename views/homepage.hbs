<div class="jumbotron p-4 p-md-5 text-white rounded bg-dark" style="margin-top: 40px">

    {{#if review}}
    <div class="col-md-6 px-0">
      <h1 class="display-4 font-italic">{{review.name}}</h1>
      <p class="lead my-3" id="body-preview">{{review.body}}</p>
      <p class="lead mb-0"><a href="/reviews/{{review.reviewid}}" class="text-white font-weight-bold">Go to full review</a></p>
    </div>
    {{/if}}

  </div>