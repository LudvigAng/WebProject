<div class="jumbotron p-4 p-md-5 text-white rounded bg-dark topMargin70" id="headCollectionContainer">

    <div class="col-md-6 px-0 centerElement">
      {{#if review}}
        <h1 class="display-6 font-italic">Latest review:</h1>    
        <h1 class="display-4 font-italic">{{review.name}}</h1>
        <h1 class="display-6 font-italic text-muted">By {{review.author}}</h1>    
        <p class="lead my-3" id="body-preview">{{review.body}}</p>
        <p class="lead mb-0"><a href="/reviews/{{review.reviewid}}" class="text-white font-weight-bold">Go to full review</a></p>
      {{else}}
        <h1 class="display-4 font-italic">No review has been written yet</h1>
        <p class="lead my-3" id="body-preview">Wait for me to write something first...</p>
      {{/if}}
    </div>

</div>

