{{#if logoutHappened}}
<ul>
    <li>You have been logged out</li>
</ul>
{{/if}}

{{#if validationErrors.length}}
    <p>Error:</p>
    <ul>
        {{#each validationErrors}}
            <li>{{this}}</li>
        {{/each}}
    </ul>
{{/if}}

<div class="container" id="loginContainer">

    <h1 id="loginHeader">Login</h1>
    <div id="separationBar"></div>

    <form action="/login" method="POST" autocomplete="off">
        <div class="form-group">
            <label for="username">Username</label>
            <input type="text" name="username" class="form-control" aria-label="username" aria-describedby="button-addon2">
        </div>
        
        <div class="form-group">
            <label for="password">Password</label>
            <input type="password" name="password" class="form-control" aria-label="password" aria-describedby="button-addon2">
        </div>

        <input type="hidden" name="_csrf" value="{{{csrfToken}}}">

        <input class="btn btn-outline-dark" type="submit" value="login">
    </form>

</div>